---
import { Project } from "@/components/Project"
import { Filters } from "@/components/ProjectFilters"
import Layout from "@/layouts/Layout.astro"
import { projectsData } from '../data/user.data.ts'
---

<Layout title="Home">
	<header class="flex items-center justify-between">
		<div>
			<h1 class="text-3xl font-semibold">Projects</h1>
		</div>
		<Filters client:load />
	</header>
	<div>
		<div class="flex flex-col gap-4 mt-2">
			<div class="flex flex-col gap-4">
				{
					projectsData.map((project) => (<Project data={project} className="[flex-basis:230px] flex-shrink-0" />))
				}
				{
					projectsData.map((project) => (<Project data={project} className="[flex-basis:230px] flex-shrink-0" />))
				}
				{
					projectsData.map((project) => (<Project data={project} className="[flex-basis:230px] flex-shrink-0" />))
				}
			</div>
		</div>
	</div>
</Layout>

<style>
  body:after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      radial-gradient(100% 50% at 50% 0,rgba(120,119,198,.3) 0,rgba(0,163,255,0) 50%,rgba(0,163,255,0) 100%);
    pointer-events: none;
  }
</style>
