---
import {
DesktopIcon,
HamburgerMenuIcon,
MagicWandIcon,
ReaderIcon,
RocketIcon,
} from "@radix-ui/react-icons"

import { jsonData } from "@/data/"
import SidebarSection from "./SidebarSection.astro"
---

<label
    for="hamburger-menu-input"
    class="md:hidden absolute top-3 right-3 z-50 cursor-pointer bg-white"
    aria-label="Open sidebar menu"
>
    <HamburgerMenuIcon
        aria-hidden="true"
        width={28}
        height={28}
        className="p-1 border rounded-md w-8 h-8"
    />
</label>
<input
    id="hamburger-menu-input"
    aria-hidden="true"
    class="input hidden"
    type="checkbox"
/>

<aside
    class="aside absolute left-[-100%] h-full flex md:relative md:left-0 flex-col gap-2 w-full md:max-w-72 bg-zinc-50 p-3 pb-0 [flex-basis:auto] flex-shrink-0 border-r border-r-neutral-100 transition-all [transition-duration:0.5s]"
>
    <header>
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-1">
                <div
                    class="w-10 aspect-square rounded-full bg-slate-300 border border-neutral-100"
                >
                </div>
                <div class="flex flex-col pt-1">
                    <span class="font-bold leading-4 text-[0.9rem]"
                        >{jsonData.name}</span
                    >
                    <span class="text-gray-600 capitalize"
                        >{jsonData.profession}</span
                    >
                </div>
            </div>
        </div>
    </header>
    <div class="flex flex-col gap-6 flex-grow">
        <SidebarSection title="Routes">
            {
                Object.values(jsonData.pages).map((page) => (
                    <li>
                        <a
                            class="border border-transparent border-neutral-400 flex text-sm gap-2 font-medium hover:bg-neutral-200 transition-all [trasition-duration:0.1s] items-center p-2 w-full capitalize rounded-md"
                            href={page.url}
                        >
                            <page.icon width={18} height={18} />
                            {page.name}
                        </a>
                    </li>
                ))
            }
        </SidebarSection>
        <SidebarSection title="Latest">
            {
                jsonData.latestActions.map((action) => (
                    <li>
                        <a
                            class="flex items-center gap-2 text-sm font-medium hover:bg-zinc-300 transition-all [trasition-duration:0.1s] p-2 w-full capitalize  rounded-md"
                            href="/"
                        >
                            {action.type === "blog" && (
                                <ReaderIcon
                                    className="text-sm aspect-square"
                                    width={20}
                                    height={20}
                                />
                            )}
                            {action.type === "project" && (
                                <MagicWandIcon
                                    className="text-sm aspect-square"
                                    width={20}
                                    height={20}
                                />
                            )}
                            {action.type === "workspace" && (
                                <DesktopIcon
                                    className="text-sm aspect-square"
                                    width={20}
                                    height={20}
                                />
                            )}
                            {action.type === "other" && (
                                <RocketIcon
                                    className="text-sm aspect-square"
                                    width={20}
                                    height={20}
                                />
                            )}
                            <div class="flex flex-col w-full">
                                <header class="flex justify-between leading-3 text-gray-500 font-medium text-[0.6rem]">
                                    <h3>{action.subTitle}</h3>
                                    <span>{action.date.toDateString()}</span>
                                </header>
                                <div>
                                    <span class="leading-4">
                                        {action.title}
                                    </span>
                                </div>
                            </div>
                        </a>
                    </li>
                ))
            }
        </SidebarSection>
    </div>
    <footer class="flex flex-col items-center gap-2 mt-2">
        <div class="flex gap-1">
            {
                Object.values(jsonData.socials).map((networkData) => (
                    <a
                        class="capitalize font-[500] underline text-sm hover:scale-150 [transition-duration:0.25s]"
                        target="_blank"
                        rel="noopener"
                        href={networkData.url}
                        title={networkData.name}
                        aria-label={`Go to ${jsonData.name}'s ${networkData.name}`}
                    >
                        <networkData.icon
                            aria-hidden="true"
                            width={24}
                            height={24}
                        />
                    </a>
                ))
            }
        </div>
        <div class="text-gray-600 text-xs">
            <span class="">Based on</span>
            <a
                rel="noopener noreferrer"
                target="_blank"
                class="font-medium underline"
                href="https://onur.dev/">Onur portfolio</a
            >
        </div>
    </footer>
</aside>

<style>
    .input:checked + aside {
        left: 0;
    }
</style>
